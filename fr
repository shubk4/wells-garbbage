<body>
  <div class="box" id="box">
    <h2>Element Content</h2>
    <button class="btn" onclick="toggleBox()">Open</button>
  </div>

  <script>
    function toggleBox() {
      var box = document.getElementById("box");
      box.classList.toggle("open");
    }
  </script>
