import React, { useState } from 'react';

const Paper = () => {
  const [folded, setFolded] = useState(true);
  const [unfolding, setUnfolding] = useState(false);

  const handleFold = () => {
    setFolded(true);
    setUnfolding(false);
  };

  const handleUnfold = () => {
    setFolded(false);
    setTimeout(() => {
      setUnfolding(true);
    }, 1000); // Delay to match the unfolding animation duration
  };

  return (
    <div className={`paper ${folded ? 'folded-paper' : 'unfolded-paper'} ${unfolding && 'unfolding'}`}>
      <div className="second-part"></div>
      {folded && (
        <button className="unfold-button" onClick={handleUnfold}>
          Unfold
        </button>
      )}
      {!folded && (
        <button className="fold-button" onClick={handleFold}>
          Fold
        </button>
      )}
    </div>
  );
};

export default Paper;









import React from 'react';
import FoldablePaper from './FoldablePaper';

const App = () => {
  return (
    <div>
      <h1>React Foldable Paper</h1>
      <FoldablePaper />
    </div>
  );
};

export default App;




.paper {
  position: relative;
  height: 100px;
  width: 100px;
  background-color: red;
  overflow: hidden;
  transition: height 0.4s ease-in-out, width 0.4s ease-in-out;
}

.folded-paper {
  height: 100px;
  width: 100px;
}

.unfolded-paper {
  height: 200px;
  width: 100px;
  transition: height 0.4s ease-in-out, width 0.4s ease-in-out;
}

.unfolded-paper.unfolding {
  width: 300px;
}

.second-part {
  height: 100%;
  width: 0;
  background-color: green;
  transition: width 0.4s ease-in-out;
}

.unfolded-paper.unfolding .second-part {
  width: 100px;
}
