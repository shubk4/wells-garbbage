import React, { useState } from 'react';

const FoldablePaper = () => {
  const [unfolded, setUnfolded] = useState(false);

  const handleFold = () => {
    setUnfolded(false);
  };

  const handleUnfold = () => {
    setUnfolded(true);
  };

  return (
    <div className={`paper ${unfolded ? 'unfolded-paper' : 'folded-paper'}`}>
      <div className="second-part"></div>
      {unfolded && (
        <button className="fold-button" onClick={handleFold}>
          Fold
        </button>
      )}
      {!unfolded && (
        <button className="unfold-button" onClick={handleUnfold}>
          Unfold
        </button>
      )}
    </div>
  );
};

export default FoldablePaper;







import React from 'react';
import FoldablePaper from './FoldablePaper';

const App = () => {
  return (
    <div>
      <h1>React Foldable Paper</h1>
      <FoldablePaper />
    </div>
  );
};

export default App;




.paper {
  position: relative;
  height: 100px;
  width: 100px;
  background-color: red;
  overflow: hidden;
  transition: height 0.4s ease-in-out, width 0.4s ease-in-out;
}

.folded-paper {
  height: 100px;
  width: 100px;
}

.unfolded-paper {
  height: 200px;
  width: 100px;
  transition: height 0.4s ease-in-out, width 0.4s ease-in-out;
}

.unfolded-paper .second-part {
  height: 100%;
  width: 0;
  background-color: green;
  transition: width 0.4s ease-in-out;
}

.fold-button,
.unfold-button {
  position: absolute;
  top: 10px;
  left: 10px;
}


